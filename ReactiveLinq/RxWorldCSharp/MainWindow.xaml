<Window x:Class="RxWorldCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600">
    <Canvas x:Name="canvasWorld">
        <Ellipse Fill="Black"            
                 Width="{Binding Path=Robot.Size.Width}" Height="{Binding Path=Robot.Size.Height}"      
                 Canvas.Left="{Binding Path=Robot.Position.X}" Canvas.Top="{Binding Path=Robot.Position.Y}"/>
        <Line X1="100" Y1="150" X2="200" Y2="200" Stroke="Red" StrokeThickness="5" />
    </Canvas>
</Window>
